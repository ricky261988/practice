pipeline{
    agent any
    environment{
        cred = credentials('access')
    }
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                script{
                    bat 'echo $cred_CLIENT_ID' 
                }
            }
        }
    }
}   