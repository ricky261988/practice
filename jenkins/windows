pipeline{
    agent any
    environment{
        client_id = credential('azure_client_id')
    }
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                echo env.client_id
            }
        }
    }
}   