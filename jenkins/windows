pipeline{
    agent any
    
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Set Variable file'){
            steps{
                script{
                    bat """
                        echo 'variable "client_id" { type = string default = "${client_id}"}' > dynamic-vars.pkr.hcl
                        echo 'variable "client_secret" { type = string default = "${client_secret}"}' >> dynamic-vars.pkr.hcl
                        echo 'variable "subscription_id" { type = string default = "${subscription_id}"}' >> dynamic-vars.pkr.hcl
                        echo 'variable "tenant_id" { type = string default = "${tenant_id}"}' >> dynamic-vars.pkr.hcl
                    """
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                script{
                    bat 'packer build -var-file=dynamic-vars.pkr.hcl .'
                }
            }
        }
    }
}   