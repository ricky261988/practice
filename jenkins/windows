pipeline{
    agent any
    
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init plugins.pkr.hcl'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                script{
                    bat 'packer build .'
                }
            }
        }
    }
}   