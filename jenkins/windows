pipeline{
    agent any
    environment{
        cred = credentials('access')
    }
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                script{
                    bat 'packer build -var client_id=$cred_CLIENT_ID -var client_secret=$cred_CLIENT_SECRET -var subscription_id=$cred_SUBSCRIPTION_ID -var tenant_id=$cred_TENANT_ID .'
                }
            }
        }
    }
}   