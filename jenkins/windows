pipeline{
    agent any
    
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                script{
                    withCredentials([azureServicePrincipal(clientIdVariable: 'PKR_VAR_azure_client_id', clientSecretVariable: 'PKR_VAR_azure_client_secret', credentialsId: 'access', subscriptionIdVariable: 'PKR_VAR_azure_subscription_id', tenantIdVariable: 'PKR_VAR_azure_tenant_id')]){
                    bat 'packer build -var azure_client_id=$PKR_VAR_azure_client_id -var azure_client_secret=$PKR_VAR_azure_client_secret -var azure_subscription_id=$PKR_VAR_azure_subscription_id -var azure_tenant_id=$PKR_VAR_azure_tenant_id .'
                    } 
                }
            }
        }
    }
}   