pipeline{
    agent any
    environment{
        client_id = credentials('azure_client_id')
    }
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                echo env.subscription_id
            }
        }
    }
}   