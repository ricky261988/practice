pipeline{
    agent any
    environment{
        cred = credentials('access')
    }
    stages{
        stage('verify packer'){
            steps{
                script{
                    bat 'packer -v'
                }
            }
        }
        stage('Intialize Packer'){
            steps{
                script{
                    bat 'packer init .'
                }
            }
        }
        stage('Build Packer Image'){
            steps{
                script{
                    bat 'az login --service-principal -u $cred_CLIENT_ID -p $cred_CLIENT_SECRET --tenant $cred_TENANT_ID'
                    bat 'packer build -var azure_client_id=${cred_CLIENT_ID} -var azure_client_secret=${cred_CLIENT_SECRET} -var azure_subscription_id=${cred_SUBSCRIPTION_ID} -var azure_tenant_id=${cred_TENANT_ID} .'
                }
            }
        }
    }
}   